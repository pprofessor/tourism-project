<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- رنگ‌های ANSI برای کنسول -->
    <conversionRule conversionWord="clr" converterClass="org.springframework.boot.logging.logback.ColorConverter" />
    <!-- Appender برای کنسول با فرمت زیبا -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%clr(%d{HH:mm:ss.SSS}){faint} %clr(%-5level) %clr(---){faint} %clr([%15.15t]){faint} %clr(%-30.30logger{29}){cyan} %clr(:){faint} %m%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>
    <!-- Appender برای فایل -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/tourism-app.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/tourism-app.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>3</maxHistory>
            <totalSizeCap>100MB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{40} - %m%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>
    <!-- غیرفعال کردن کامل Netty و JDK warnings -->
    <logger name="io.netty" level="OFF" />
    <logger name="sun.misc" level="OFF" />
    <logger name="jdk.internal" level="OFF" />
    <!-- سطوح لاگ‌گیری -->
    <logger name="com.tourism.app" level="INFO" />
    <logger name="com.tourism.app.controller" level="INFO" />
    <!-- Spring Framework -->
    <logger name="org.springframework" level="WARN" />
    <logger name="org.springframework.web" level="WARN" />
    <logger name="org.springframework.security" level="WARN" />
    <!-- Hibernate -->
    <logger name="org.hibernate" level="WARN" />
    <!-- روت لاگر -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </root>
</configuration>